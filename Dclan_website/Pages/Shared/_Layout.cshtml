        }

        }
        /* Dropdown hidden by default */
        .services-dropdown {
            display: none;
            position: absolute;
            background: #fff;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            z-index: 100;
        }

        /* Show dropdown when active */
        .nav-item-dropdown.open .services-dropdown {
            display: block;
        }

        /* Optional styling */
        .nav-services-toggle {
            cursor: pointer;
            margin-left: 5px;
        }

    </style>
