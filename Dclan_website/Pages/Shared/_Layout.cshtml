    <style>
        :root {
            --primary-purple: #7047EB;
            --text-dark: #100C29;
        }

        /* --- Global Scrolled Padding --- */
        body {
            padding-top: 140px; /* Space for fixed headers */
        }

        /* --- TOP HEADER (Purple Bar) --- */
        .top-header {
            background-color: #5D3CF3;
            color: white;
            padding: 8px 0;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 10001;
        }

            .top-header a {
                color: white;
                text-decoration: none;
                margin-left: 15px;
                font-size: 14px;
            }

            .top-header .sales-info {
                font-size: 14px;
                font-weight: 500;
            }

        /* --- FLOATING NAVBAR --- */
        .navbar-container {
            position: fixed;
            top: 10px !important;
            left: 0;
            width: 100%;
            z-index: 9999;
            padding-top: 20px;
            padding-bottom: 20px;
            max-width: 100% !important;
            padding-left: 0px !important;
            padding-right: 0px !important;
            background: linear-gradient(to bottom, rgba(203, 182, 252, 0.2) 0%, rgba(255,255,255,0) 100%);
            display: flex;
            justify-content: center;
        }

        .custom-navbar {
            background: rgba(255, 255, 255, 0.5);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border: 1px solid rgba(255, 255, 255, 0.8);
            border-radius: 10px;
            padding: 12px 30px;
            box-shadow: 0 4px 20px rgba(112, 71, 235, 0.03);
            width: 100% !important;
            max-width: 100% !important;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .brand-logo img {
            height: 40px;
        }

        .nav-links {
            list-style: none;
            display: flex;
            gap: 30px;
            margin: 0;
            padding: 0;
        }

            .nav-links a {
                text-decoration: none;
                color: var(--text-dark);
                font-weight: 500;
                transition: 0.3s;
            }

                .nav-links a:hover, .nav-links a.active {
                    color: var(--primary-purple);
                    font-weight: 700;
                }

        .btn-purple-nav {
            background-color: var(--primary-purple);
            color: white !important;
            padding: 10px 22px;
            border-radius: 10px;
            font-weight: 600;
            text-decoration: none;
        }

        /* --- MOBILE MENU --- */
        #mobile-menu-btn {
            cursor: pointer;
            display: none;
            font-size: 1.5rem;
        }

        @@media (max-width: 991px) {
            #mobile-menu-btn

        {
            display: block;
        }
        
        .nav-links {
            display: none;
            flex-direction: column;
            position: absolute;
            top: 100%;
            left: 2.5%;
            width: 95%;
            background: white;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            margin-top: 10px;
        }

            .nav-links.mobile-menu-active {
                display: flex;
            }

        .d-sm-none-custom {
            display: none !important;
        }

        }

        .nav-item-dropdown {
            position: relative;
        }

        /* Dropdown box */
        .services-dropdown {
            position: absolute;
            top: 50px;
            left: 0;
            width: 290px;
            background: #ffffff;
            border-radius: 18px;
            padding: 12px;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.25);
            display: none;
            z-index: 999;
        }

        /* Service buttons */
        .service-item {
            display: block;
            padding: 10px 14px;
            margin-bottom: 10px;
            border-radius: 14px;
            border: 2px solid #7b6cff;
            color: #7b6cff;
            font-size: 12px;
            text-decoration: none;
            transition: all 0.25s ease;
        }

            /* Active */
            .service-item.active {
                background: #9b8cff;
                color: #fff;
                border-color: #9b8cff;
                box-shadow: 0 6px 14px rgba(123, 108, 255, 0.4);
            }

            .service-item:hover {
                background: #f2f0ff;
            }

            .service-item:last-child {
                margin-bottom: 0;
            }
        /* Modal Background Overlay */
        .modal-overlay {
            display: none; /* Hidden by default */
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(16, 12, 41, 0.4); /* Dimmed background */
            backdrop-filter: blur(4px);
            z-index: 20000;
            overflow-y: auto; /* This allows the MODAL to scroll if screen is small */
            padding: 20px;
        }

        /* Prevent background body scroll when modal is open */
        body.modal-open {
            overflow: hidden;
        }

        /* Modal Card Design */
        .contact-form-card {
            background: #F4F5F8; /* Light gray background matching your image */
            max-width: 600px;
            margin: 40px auto;
            padding: 40px;
            border-radius: 24px;
            position: relative;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
        }

        .modal-title {
            font-size: 24px;
            font-weight: 700;
            color: #334155;
            margin-bottom: 25px;
        }

        /* Close Button */
        .close-modal {
            position: absolute;
            top: 20px;
            right: 25px;
            font-size: 30px;
            cursor: pointer;
            color: #64748b;
        }

        /* Form Grid Layout */
        .form-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 10px;
        }

        .form-group {
            display: flex;
            flex-direction: column;
            gap: 4px;
        }

            .form-group.full-width {
                grid-column: span 2;
            }

            .form-group label {
                font-weight: 500;
                font-size: 14px;
                color: #475569;
            }

            .form-group input,
            .form-group select,
            .form-group textarea {
                padding: 12px 16px;
                border-radius: 10px;
                border: 1px solid transparent;
                background: #fdfdfd;
                font-size: 14px;
                transition: 0.3s;
            }

            .form-group textarea {
                height: 120px;
                resize: none;
            }

        /* Purple Button from your image */
        .btn-submit {
            margin-top: 25px;
            width: 100%;
            padding: 14px;
            border: none;
            border-radius: 12px;
            background: linear-gradient(90deg, #7047EB 0%, #3B82F6 100%);
            color: white;
            font-weight: 700;
            font-size: 16px;
            cursor: pointer;
            box-shadow: 0 4px 15px rgba(112, 71, 235, 0.3);
        }

        /* Responsive */
        @@media (max-width: 600px) {
            .form-grid

        {
            grid-template-columns: 1fr;
        }

        .form-group.full-width {
            grid-column: span 1;
        }

        .contact-form-card {
            padding: 20px;
        }

        }
        body.modal-open {
            overflow: hidden !important; 
            padding-right: 0px; 
        }

            /* Hide scrollbar for Chrome, Safari and Opera */
            body.modal-open::-webkit-scrollbar {
                display: none;
                width: 0 !important;
            }

        /* Hide scrollbar for IE, Edge and Firefox */
        body.modal-open {
            -ms-overflow-style: none; 
            scrollbar-width: none;
        }
        .modal-overlay::-webkit-scrollbar {
            display: none;
        }

        .modal-overlay {
            scrollbar-width: none;
            -ms-overflow-style: none;
        }
        /* ---------------- MOBILE SIDEBAR ---------------- */

        .mobile-sidebar {
            position: fixed;
            top: 0;
            left: -100%;
            width: 85%;
            max-width: 320px;
            height: 100%;
