            }

        .sidebar-overlay {
            position: fixed;
            inset: 0;
            background: rgba(0,0,0,0.45);
            z-index: 29999;
            display: none;
        }

            .sidebar-overlay.active {
                display: block;
            }

        .sidebar-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
        }

            .sidebar-header img {
                height: 36px;
            }

            .sidebar-header i {
                font-size: 22px;
                cursor: pointer;
            }

        /* Links */
        .sidebar-links {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .sidebar-links li {
                margin-bottom: 10px;
            }

            .sidebar-links a,
            .sidebar-dropdown span {
                display: flex;
                justify-content: space-between;
                align-items: center;
                padding: 12px;
                border-radius: 10px;
                font-weight: 500;
                text-decoration: none;
                color: var(--text-dark);
            }

                .sidebar-links a:hover {
                    background: #f3f1ff;
                    color: var(--primary-purple);
                }

        /* Services dropdown */
        .sidebar-dropdown ul {
            display: none;
            padding-left: 15px;
        }

        .sidebar-dropdown.active ul {
            display: block;
        }

        .sidebar-dropdown ul a {
            font-size: 14px;
        }

        /* Button */
        .sidebar-btn {
            display: block;
            text-align: center;
            margin-top: 20px;
        }

        /* Hide desktop nav on mobile */
        @@media (max-width: 991px) {
            .nav-links

        {
            display: none !important;
        }

        }
        @@media (max-width: 991px) {
            #mobile-menu-btn

        {
            display: block;
            z-index: 99999;
        }

        .nav-links {
            display: none !important;
        }

        }
        @@media (max-width: 992px) {
            body

        {
            padding-top: 180px !important;
        }

        .hero-badge {
            margin-top: 40px !important;
            position: relative;
            z-index: 1;
        }

        }

        @@media (max-width: 576px) {
            body

        {
            padding-top: 160px !important;
        }

        .hero-badge {
            margin-top: 30px !important;
        }

        }
        /* --- FOOTER RESPONSIVE FIX (Add this at the end) --- */
        @@media (max-width: 991px) {
            .footer-section, footer

        {
            padding-top: 50px !important;
            padding-bottom: 40px !important;
            text-align: center !important;
        }
        .footer-section .row > div,
        footer .row > div,
        footer [class*="col-"] {
