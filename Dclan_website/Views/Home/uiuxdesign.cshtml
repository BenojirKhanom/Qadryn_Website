        :root {
            --purple: #6B57D2;
            --light-purple: #F3F1FF;
            --light-blue: #E1E7FF;
            --dark-text: #2D2E5F;
            --gray-text: #5E5F83;
        }

        body {
            background-color: #fff;
            font-family: 'Plus Jakarta Sans', sans-serif;
            padding: 50px 20px;
        }

        .bento-section {
            max-width: 1400px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: 1fr 1fr 1fr 1fr;
            grid-template-rows: auto auto;
            gap: 20px;
        }

        .card {
            border-radius: 24px;
            padding: 35px;
            position: relative;
            overflow: hidden;
            display: flex;
            flex-direction: column;
        }

        /* Background Colors */
        .card-white {
            background-color: #F8F9FB;
        }

        .card-purple {
            background-color: var(--purple);
            color: white;
            padding-bottom: 0;
        }

        .card-light {
            background-color: #F1F3FF;
        }

        .card-blue {
            background-color: var(--light-blue);
        }

        /* Card Positions */
        .card-minds {
            grid-column: 1 / 2;
            grid-row: 1;
        }

        .card-testimonial {
            grid-column: 2 / 3;
            grid-row: 1 / 3;
        }
       
        .card-score {
            grid-column: 3 / 4;
            grid-row: 1;
        }

        .card-approach {
            grid-column: 4 / 5;
            grid-row: 1;
        }

        .card-design {
            grid-column: 1 / 2;
            grid-row: 2;
            justify-content: center;
        }

        .card-clients {
            grid-column: 3 / 5;
            grid-row: 2;
            background: linear-gradient(135deg, #FDFDFF 0%, #aba1fa 100%);
            border: 1px solid rgba(255, 255, 255, 0.4); 
        }

        /* Typography */
        .title {
            font-size: 24px;
            font-weight: 700;
            color: var(--dark-text);
            margin-bottom: 15px;
        }

        .title-sm {
            font-size: 24px;
            font-weight: 700;
            color: var(--purple);
            margin-bottom: 20px;
        }

        .huge-title {
            font-size: 42px;
            font-weight: 700;
            color: var(--dark-text);
            margin-bottom: 5px;
        }

        .desc {
            color: var(--gray-text);
            font-size: 15px;
            line-height: 1.6;
        }

        .desc-muted {
            color: var(--gray-text);
            font-size: 18px;
            font-weight: 500;
        }

        /* Elements Styles */
        .avatar-stack {
            display: flex;
            margin-bottom: 25px;
        }

            .avatar-stack img {
                width: 45px;
                height: 45px;
                border-radius: 50%;
                border: 3px solid white;
                margin-right: -12px;
                object-fit: cover;
            }

        .testimonial-content p {
            font-size: 17px;
            line-height: 1.6;
            margin-bottom: 20px;
            font-weight: 400;
            opacity: 0.95;
        }

        .testimonial-content cite {
            font-style: normal;
            font-weight: 700;
            font-size: 14px;
        }

        .testimonial-img {
            margin-top: auto;
            overflow: hidden;
            border-radius: 20px 20px 0 0;
        }

            .testimonial-img img {
                width: 100%;
                display: block;
                object-fit: cover;
            }

        .score-header {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 10px;
        }

        .star {
            color: #FFB800;
            font-size: 35px;
        }

        .score-num {
            font-size: 40px;
            font-weight: 700;
            color: var(--dark-text);
        }

        .small-desc {
            font-size: 15px;
            color: var(--gray-text);
            line-height: 1.5;
        }

        .approach-list {
            list-style: none;
            padding: 0;
            z-index: 2;
        }

            .approach-list li {
                font-size: 16px;
                font-weight: 500;
                margin-bottom: 10px;
                color: var(--dark-text);
                display: flex;
                align-items: center;
            }

                .approach-list li::before {
                    content: "•";
                    margin-right: 10px;
                    font-weight: 900;
                }

        .tag-row {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 15px;
        }

            .tag-row.right {
                justify-content: flex-end;
            }

        .tag {
            background: white;
            padding: 10px 18px;
            border-radius: 12px;
            font-size: 14px;
            font-weight: 600;
            color: var(--dark-text);
            box-shadow: 0 4px 10px rgba(0,0,0,0.03);
        }

        .tag-blue {
            background: var(--purple);
            color: white;
        }

        /* Floating Elements for Client Card */
        .float-img {
            position: absolute;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            border: 3px solid white;
            object-fit: cover;
        }

        .f1 {
            top: 20px;
            right: 180px;
        }

        .f2 {
            bottom: 30px;
            right: 150px;
        }

        .f3 {
            top: 60px;
            right: 40px;
        }

        .sparkle {
            position: absolute;
            color: var(--purple);
            opacity: 0.4;
            font-size: 20px;
        }

        .s1 {
            top: 20%;
            right: 10%;
        }

        .s2 {
            bottom: 40%;
            left: 5%;
        }

        .s3 {
            bottom: 15%;
            right: 15%;
        }

        .f4 {
            top: 30px;
            left: 50%;
        }

        .f5 {
            bottom: 30px;
            right: 30px;
        }

        .f6 {
            top: 100px;
            right: 100px;
        }

