        .steps-list {
            display: flex;
            flex-direction: column;
            gap: 25px;
            align-items: center;
        }

        /* Individual Step Card */
        .step-card {
            background: rgba(255, 255, 255, 0.05); /* Semi-transparent white for glass effect */
