        }

        /* Card Header */
        .card-top {
            text-align: center;
            margin-bottom: 30px;
        }

            .card-top h3 {
                font-size: 18px;
                font-weight: 700;
                margin-bottom: 5px;
            }

        .starting-label {
            font-size: 13px;
            color: #6b7280;
        }

        .featured .starting-label {
            color: rgba(255, 255, 255, 0.8);
        }

        .main-price {
            font-size: 38px;
            font-weight: 700;
            margin-top: 10px;
        }

            .main-price span {
                font-weight: 400;
                margin-right: 2px;
            }

            .main-price small {
                font-size: 16px;
                font-weight: 400;
                color: #6b7280;
            }

        .featured .main-price small {
            color: rgba(255, 255, 255, 0.8);
        }

        /* Feature Highlight Box */
        .feature-highlight-box {
            background-color: #F8F9FB;
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 30px;
        }

            .feature-highlight-box.outline {
                background-color: transparent;
                border: 1px solid rgba(255, 255, 255, 0.4);
            }

            .feature-highlight-box p {
                font-size: 13px;
                line-height: 1.5;
                margin: 8px 0;
            }

        .divider {
            height: 1px;
            background-color: #A5A9C1;
            margin: 10px 0;
        }

        .featured .divider {
            background-color: rgba(255, 255, 255, 0.3);
        }

        .price-row {
            display: flex;
            justify-content: space-between;
            font-weight: 600;
            font-size: 14px;
        }

        /* Feature List */
        .feature-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .feature-list li {
                font-size: 14px;
                margin-bottom: 12px;
                padding-left: 25px;
                position: relative;
                line-height: 1.4;
            }

                /* Checkmark Icon */
                .feature-list li::before {
                    content: "✓";
                    position: absolute;
                    left: 0;
                    font-weight: 700;
                }

        .featured .feature-list li::before {
            color: #fff;
        }

