     @section Styles {
    <style>
        /* --- RESET & VARIABLES --- */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Inter', sans-serif;
        }

        :root {
            --brand-purple: #7047EB; /* Button and Brand color */
            --top-bar-bg: #5D3CF3; /* Vibrant Purple from top of image */
            --nav-bg: rgba(235, 229, 255, 0.7); /* Lavender tint with transparency */
            --text-dark: #100C29;
        }

        html::-webkit-scrollbar,
        body::-webkit-scrollbar {
            width: 0px;
            background: transparent;
        }

        /* Firefox */
        html, body {
            scrollbar-width: none;
        }

        /* IE & old Edge */
        html, body {
            -ms-overflow-style: none;
        }
        body {
            background-image: linear-gradient(180deg, #CBB6FC 0%, #EBE5FF 30%, #FFF5F5 100%);
            background-repeat: no-repeat;
            background-size: 100% 100vh;
            background-color: #ffffff;
            min-height: 100vh;
            position: relative;
            padding-bottom: 50px;
            padding-top: 160px;
        }

        /* --- BACKGROUND GRID PATTERN --- */
        .grid-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%; /* Fixed height issue */
            background-image: linear-gradient(var(--bg-grid-color) 1px, transparent 1px), linear-gradient(90deg, var(--bg-grid-color) 1px, transparent 1px);
            background-size: 60px 60px;
            z-index: -1;
            pointer-events: none;
            mask-image: linear-gradient(to bottom, black 80%, transparent 100%);
            -webkit-mask-image: linear-gradient(to bottom, black 80%, transparent 100%);
        }

        /* --- CONTAINER --- */
        .container {
            max-width: 1250px;
            margin: 0 auto;
            padding: 0 20px;
        }

     
      

        /* --- MAIN CONTENT LAYOUT --- */
        .contact-wrapper {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            gap: 60px;
        }

        /* --- LEFT SIDE: TEXT --- */
        .contact-info {
            flex: 1; /* Changed from 0 0 45% */
            padding-top: 20px;
        }

            .contact-info h1 {
                font-size: 48px;
                font-weight: 700;
                color: #312E81;
                line-height: 1.2;
                margin-bottom: 20px;
            }

            .contact-info h3 {
                font-size: 20px;
                font-weight: 500;
                color: #4B5563;
                margin-bottom: 30px;
            }

        .feature-list {
            list-style: none;
            margin-bottom: 40px;
        }

        .feature-item {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 15px;
            color: #4B5563;
            font-size: 16px;
        }

        .icon-circle {
            width: 24px;
            height: 24px;
            background-color: rgba(99, 102, 241, 0.2);
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-shrink: 0; /* Prevents icon from squashing */
        }

        .icon-dot {
            width: 10px;
            height: 10px;
            background-color: var(--primary-purple);
            border-radius: 50%;
        }

        .trust-text {
            display: block;
            font-size: 14px;
            color: #6B7280;
            line-height: 1.5;
            margin-bottom: 20px;
        }

            .trust-text p1{
                color:#000;
            }
        .reviews {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 30px;
        }

        .avatar-group {
            display: flex;
        }

        .avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            border: 2px solid #fff;
            margin-left: -10px;
        }

            .avatar:first-child {
                margin-left: 0;
            }

        .review-text {
            font-weight: 500;
            color: #4B5563;
            font-size: 14px;
        }

        .action-buttons {
            display: flex;
            gap: 20px;
        }

        .btn-demo {
            background-color: var(--primary-purple);
            color: white;
            border: none;
            padding: 14px 28px;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 16px;
        }

        .arrow-icon {
            background: rgba(255,255,255,0.9);
            color: var(--primary-purple);
            width: 18px;
            height: 18px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 10px;
        }

        .btn-contact-sales {
            background: transparent;
            color: var(--primary-purple);
            border: 1px solid #C7D2FE;
            padding: 14px 28px;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            font-size: 16px;
        }

        /* --- RIGHT SIDE: FORM --- */
        .contact-form-card {
            flex: 1;
            background: white;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.08);
        }

        .form-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
            margin-bottom: 20px;
        }

        .form-group {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }

            .form-group label {
                font-size: 14px;
                color: #374151;
                font-weight: 500;
            }

            .form-group input,
            .form-group select,
            .form-group textarea {
                background-color: #F3F4F6;
                border: 1px solid transparent;
                border-radius: 8px;
                padding: 12px 16px;
                font-size: 14px;
                outline: none;
                transition: 0.2s;
                width: 100%;
            }

                .form-group input:focus,
                .form-group select:focus,
                .form-group textarea:focus {
                    background-color: white;
                    border-color: var(--primary-purple);
                }

            .form-group.full-width {
                grid-column: span 2;
            }

            .form-group textarea {
                resize: none;
                height: 120px;
            }

