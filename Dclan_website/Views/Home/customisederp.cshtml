    <style>

        /* main section */
        .hero-wrapper {
            position: relative;
            width: 100%;
            min-height: 120vh;
            padding-top: 190px !important;
            padding-left: 160px !important;
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            font-family: 'Inter', sans-serif;
            background: linear-gradient(180deg, #EADFF9 0%, #EADFF9 100%);
            overflow: hidden;

        }
            .hero-wrapper::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background-image: linear-gradient(rgba(180, 180, 180, 0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(180, 180, 180, 0.1) 1px, transparent 1px);
                background-size: 80px 80px; /* গ্রিড সাইজ */
                pointer-events: none;
                z-index: 1;
            }
        .text-content {
            position: relative;
            z-index: 2;
            max-width: 900px;
            margin-bottom: 60px; 
        }

        .hero-title {
            font-size: 60px;
            line-height: 1.1;
            color: #4E398C;
            font-weight: 500;
            margin-bottom: 25px;
        }

            .hero-title .bold-text {
                font-weight: 800;
            }

        .hero-description {
            font-size: 18px;
            color: #666;
            line-height: 1.5;
            max-width: 700px;
            margin-bottom: 35px;
        }

        .btn-consultation {
            display: inline-block;
            background-color: #7963FA;
            color: white;
            padding: 15px 30px;
            border-radius: 12px;
            text-decoration: none;
            font-weight: 600;
            transition: 0.3s;
        }

        .animation-area {
            position: relative;
            z-index: 2;
            width: 100%;
            margin-top: 20px;
        }

        .image-track {
            display: flex;
            align-items: center;
            gap: 30px;
            width: max-content;
            animation: infiniteSlide 50s linear infinite; 
        }
        .img-box {
            flex-shrink: 0;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        }

            .img-box img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .small {
            width: 400px;
            height: 250px;
        }

        .medium {
            width: 500px;
            height: 350px;
        }

        .large {
            width: 500px;
            height: 350px;
            border: 1px solid #ddd;
        }
        @@keyframes infiniteSlide {
            0%

        {
            transform: translateX(0);
        }

        100% {
            transform: translateX(-50%);
        }
        }
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        .hero-wrapper {
