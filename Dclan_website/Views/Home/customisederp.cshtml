            padding: 80px 20px;
            background-color: #fff;
            font-family: 'Inter', sans-serif;
            color: #333;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
        }

        .pricing-header {
            text-align: center;
            margin-bottom: 60px;
        }

            .pricing-header h2 {
                color: var(--primary-purple);
                font-size: 2.5rem;
                font-weight: 700;
                margin-bottom: 15px;
            }

            .pricing-header p {
                color: var(--text-gray);
                max-width: 600px;
                margin: 0 auto;
                line-height: 1.6;
            }

        .pricing-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 15px;
            align-items: start;
        }

        /* Base Card Styling */
        .pricing-card {
            background: #fcfcfd;
            border: 1px solid var(--border-color);
            border-radius: 16px;
            padding: 40px 30px;
            position: relative;
            transition: transform 0.3s ease;
        }

            /* Highlighted (Middle) Card Styling */
            .pricing-card.highlighted {
                background-color: var(--bg-purple);
                color: white;
                transform: scale(1.02);
                box-shadow: 0 20px 40px rgba(99, 102, 241, 0.2);
            }

        .popular-badge {
            position: absolute;
            top: -16px;
            left: 50%;
            transform: translateX(-50%);
            background-color: #2563eb;
            color: white;
            padding: 6px 16px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        /* Card Top Styling */
        .card-top {
            text-align: center;
            margin-bottom: 25px;
        }

        .plan-name {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--primary-purple);
            margin-bottom: 5px;
        }

        .highlighted .plan-name {
            color: white;
        }

        .starting-label {
            font-size: 0.9rem;
            color: var(--text-gray);
        }

        .highlighted .starting-label {
            color: rgba(255, 255, 255, 0.8);
        }

        .price {
            font-size: 3rem;
            font-weight: 500;
            color: #374151;
            margin-top: 10px;
        }

        .highlighted .price {
            color: white;
        }

        .price span {
            font-size: 1.2rem;
            font-weight: 400;
            color: var(--text-gray);
        }

        .highlighted .price span {
            color: rgba(255, 255, 255, 0.8);
        }

        /* Inner Info Box Styling */
        .info-box {
            background: white;
            border: 1px solid #eee;
            border-radius: 12px;
            padding: 15px;
            margin-bottom: 30px;
            font-size: 0.9rem;
        }

        .highlighted .info-box {
            background: transparent;
            border: 1px solid rgba(255, 255, 255, 0.4);
        }

        .info-box p {
            margin: 0;
            color: #4b5563;
        }

        .highlighted .info-box p {
            color: white;
        }

        .divider {
            height: 1px;
            background-color: #eee;
            margin: 10px 0;
        }

            .divider.light {
                background-color: rgba(255, 255, 255, 0.4);
            }

        .stat-line {
            display: flex;
            justify-content: space-between;
            font-weight: 500;
        }

        /* Features List Styling */
        .features-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .features-list li {
                padding-left: 30px;
                position: relative;
                margin-bottom: 12px;
                font-size: 0.95rem;
                line-height: 1.4;
                color: #4b5563;
            }

        .highlighted .features-list li {
            color: white;
        }

        /* Custom Checkmark Icon using CSS */
        .features-list li::before {
            content: '✓';
            position: absolute;
            left: 0;
            color: #374151;
            font-weight: bold;
        }

        .highlighted .features-list li::before {
            color: white;
        }

