    @section Styles {
    <style>
        
        :root {
            --primary-purple: #7047EB;
            --text-dark: #100C29;
            --text-muted: #52525B;
            --bg-body: #F8F5FF;
            --bg-grid-color: #E5E7EB;
        }

        html::-webkit-scrollbar,
        body::-webkit-scrollbar {
            width: 0px;
            background: transparent;
        }

        /* Firefox */
        html, body {
            scrollbar-width: none;
        }

        /* IE & old Edge */
        html, body {
            -ms-overflow-style: none;
        }
        body {
            background-image: linear-gradient(180deg, #CBB6FC 0%, #EBE5FF 30%, #FFF5F5 100%);
            background-repeat: no-repeat;
            background-size: 100% 600px; /* Adjusted background height */
            background-color: #ffffff;
            min-height: 100vh;
            position: relative;
            padding-bottom: 50px;
            font-family: 'Inter', sans-serif;

        }

        /* --- BACKGROUND GRID PATTERN --- */
        .grid-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100vh;
            background-image: linear-gradient(var(--bg-grid-color) 1px, transparent 1px), linear-gradient(90deg, var(--bg-grid-color) 1px, transparent 1px);
            background-size: 60px 60px;
            z-index: -1;
            pointer-events: none;
            mask-image: linear-gradient(to bottom, black 80%, transparent 100%);
            -webkit-mask-image: linear-gradient(to bottom, black 80%, transparent 100%);
        }
       

        /* --- HEADER SECTION --- */
        .blog-header {
            text-align: center;
            padding-top: 80px;
            padding-bottom: 40px;
            position: relative;
            z-index: 2;
        }

        .header-title {
            font-size: 3.5rem;
            font-weight: 700;
            color: #312E81; /* Darker purple for title */
            margin-bottom: 15px;
            font-family: 'Archivo', sans-serif;
        }

        .header-subtitle {
            font-size: 1.1rem;
            color: #4B5563;
            margin-bottom: 40px;
        }

        /* SEARCH BAR */
        .search-box-wrapper {
            max-width: 600px;
            margin: 0 auto;
            position: relative;
        }

        .search-input {
            width: 100%;
            padding: 16px 25px 16px 50px;
            border-radius: 12px;
            border: 1px solid #C4B5FD;
            background: #fff;
            font-size: 1rem;
            outline: none;
            box-shadow: 0 4px 20px rgba(112, 71, 235, 0.05);
            transition: border-color 0.3s;
        }

            .search-input:focus {
                border-color: #7047EB;
            }

        .search-icon {
            position: absolute;
            left: 20px;
            top: 50%;
            transform: translateY(-50%);
            color: #9CA3AF;
            font-size: 1.2rem;
        }

        /* --- BLOG CARDS SECTION --- */
        .blog-grid-section {
            padding-top: 20px;
            padding-bottom: 60px;
            position: relative;
            z-index: 2;
        }

        .qadryn-card {
            background: #FFFFFF;
            border: 1px solid #EAE6FF;
            border-radius: 24px;
            overflow: hidden;
            height: 100%;
            display: flex;
            flex-direction: column;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .qadryn-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 12px 30px rgba(112, 71, 235, 0.1);
            }

        .card-thumb-box {
            height: 240px;
            width: 100%;
            overflow: hidden;
            background-color: #F3F0FF;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .card-thumb-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .card-content {
            padding: 24px;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            text-align: left;
        }

        .card-badge {
            background-color: rgba(112, 71, 235, 0.1);
            color: #7047EB;
            font-size: 12px;
            font-weight: 700;
            text-transform: uppercase;
            padding: 6px 12px;
            border-radius: 6px;
            margin-bottom: 16px;
            display: inline-block;
        }

        .card-title-text {
            font-size: 1.25rem;
            font-weight: 400;
            color: #100C29;
            margin-bottom: 12px;
            line-height: 1.4;
            font-family: 'Archivo', sans-serif;
        }

        .card-desc-text {
            font-size: 0.95rem;
            color: #52525B;
            line-height: 1.6;
            margin-bottom: 24px;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .btn-card-action {
            margin-top: auto;
            border: 1px solid #7047EB;
            color: #7047EB;
            background: transparent;
            padding: 8px 24px;
            border-radius: 8px;
            font-size: 0.9rem;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
        }

            .btn-card-action:hover {
                background-color: #7047EB;
                color: #fff;
            }

        /* --- PAGINATION STYLE --- */
        .pagination-wrapper {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 25px;
            margin-top: 40px;
            margin-bottom: 80px;
            font-family: 'Archivo', sans-serif;
        }

        .pagination-arrow {
            width: 44px;
            height: 44px;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 1.5px solid #7047EB;
            border-radius: 12px;
            color: #7047EB;
            font-size: 14px;
            text-decoration: none;
            transition: all 0.3s ease;
            background: transparent;
        }

            .pagination-arrow:hover {
                background-color: #7047EB;
                color: #fff;
                box-shadow: 0 4px 10px rgba(112, 71, 235, 0.2);
            }

        .page-numbers-box {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .page-link-text {
            text-decoration: none;
            font-size: 18px;
            font-weight: 600;
            color: #100C29;
            transition: 0.3s;
        }

            .page-link-text.active {
                color: #7047EB;
            }

            .page-link-text:hover {
                color: #7047EB;
            }

       
    </style>
