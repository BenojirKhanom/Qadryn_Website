            flex: 1; /* Takes up right space */
        }

        .lang-list {
            font-size: 0.9rem;
            color: rgba(255, 255, 255, 0.9);
        }

            .lang-list span {
                cursor: pointer;
                margin: 0 2px;
            }

                .lang-list span:hover {
                    text-decoration: underline;
