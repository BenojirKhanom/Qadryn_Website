            display: flex;
            align-items: flex-end;
            justify-content: space-between;
            padding-top: 20px;
        }

        .social-icons-wrapper {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            gap: 5px;
        }

        .social-circle {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 50px;
            height: 40px;
            border-radius: 50%;
            background-color: #fff;
            color: #4252e3;
            text-decoration: none;
            font-size: 20px;
            margin-bottom: 5px;
        }

        .social-row {
            display: flex;
            gap: 10px;
        }

        .social-circle:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }

        .copyright-text {
            font-size: 0.9rem;
            color: rgba(255, 255, 255, 0.8);
            line-height: 1.5;
        }

        .language-selector {
            text-align: right;
        }

        .lang-list {
            font-size: 0.9rem;
            color: rgba(255, 255, 255, 0.9);
            cursor: pointer;
        }

