            margin: 0;
            padding: 0;
        }

            .nav-links a {
                text-decoration: none;
                color: var(--text-dark);
                font-weight: 600;
                font-size: 1rem;
                transition: color 0.3s;
            }

                .nav-links a:hover, .nav-links a.active {
                    color: var(--primary-purple);
                }

        .btn-purple {
            background: var(--primary-purple);
            color: white;
            padding: 12px 24px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            font-size: 0.95rem;
            border: none;
