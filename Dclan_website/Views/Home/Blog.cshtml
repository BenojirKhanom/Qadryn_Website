    <style>
        
        :root {
            --primary-purple: #7047EB;
            --text-dark: #100C29;
            --text-muted: #52525B;
            --bg-body: #F8F5FF;
            --bg-grid-color: #E5E7EB;
        }

        html::-webkit-scrollbar,
        body::-webkit-scrollbar {
            width: 0px;
            background: transparent;
        }

        /* Firefox */
        html, body {
            scrollbar-width: none;
        }

        /* IE & old Edge */
        html, body {
            -ms-overflow-style: none;
        }
        body {
            background-image: linear-gradient(180deg, #CBB6FC 0%, #EBE5FF 30%, #FFF5F5 100%);
            background-repeat: no-repeat;
            background-size: 100% 750px; /* Adjusted background height */
            background-color: #ffffff;
            min-height: 100vh;
            position: relative;
            padding-bottom: 50px;
            font-family: 'Inter', sans-serif;

        }

        /* --- BACKGROUND GRID PATTERN --- */
        .grid-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100vh;
            background-image: linear-gradient(var(--bg-grid-color) 1px, transparent 1px), linear-gradient(90deg, var(--bg-grid-color) 1px, transparent 1px);
            background-size: 60px 60px;
            z-index: -1;
            pointer-events: none;
            mask-image: linear-gradient(to bottom, black 80%, transparent 100%);
            -webkit-mask-image: linear-gradient(to bottom, black 80%, transparent 100%);
        }
        /* Container Layout */
        .hr-container {
            display: flex;
            gap: 30px;
            max-width: 1400px;
            margin: 0 auto;
            padding: 40px 20px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin-top: 140px !important;
            align-items: flex-start;
        }

        /* Sidebars Styling */
        .sidebar {
            width: 300px;
            flex-shrink: 0;
            position: sticky; /* This keeps them fixed while scrolling */
            top: 20px;
            height: fit-content;
            top: 150px !important;

        }
        /* Middle Content Area */
        .main-content {
            max-height: calc(100vh - 180px);
            overflow-y: auto;
        }

            /* Hide scrollbar for main content */
            .main-content::-webkit-scrollbar {
