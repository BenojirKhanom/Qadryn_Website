        }

        /* --- BLOG CARDS SECTION --- */
        .blog-grid-section {
            padding-top: 20px;
            padding-bottom: 60px;
            position: relative;
            z-index: 2;
        }

        .qadryn-card {
            background: #FFFFFF;
            border: 1px solid #EAE6FF;
            border-radius: 24px;
            overflow: hidden;
            height: 100%;
            display: flex;
            flex-direction: column;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .qadryn-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 12px 30px rgba(112, 71, 235, 0.1);
            }

        .card-thumb-box {
            height: 240px;
            width: 100%;
            overflow: hidden;
            background-color: #F3F0FF;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .card-thumb-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .card-content {
            padding: 24px;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            text-align: left;
        }

        .card-badge {
            background-color: rgba(112, 71, 235, 0.1);
            color: #7047EB;
            font-size: 12px;
            font-weight: 700;
            text-transform: uppercase;
            padding: 6px 12px;
            border-radius: 6px;
            margin-bottom: 16px;
            display: inline-block;
        }

        .card-title-text {
            font-size: 1.25rem;
            font-weight: 700;
            color: #100C29;
            margin-bottom: 12px;
            line-height: 1.4;
            font-family: 'Archivo', sans-serif;
        }

        .card-desc-text {
            font-size: 0.95rem;
            color: #52525B;
            line-height: 1.6;
            margin-bottom: 24px;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .btn-card-action {
            margin-top: auto;
            border: 1px solid #7047EB;
            color: #7047EB;
            background: transparent;
            padding: 8px 24px;
            border-radius: 8px;
            font-size: 0.9rem;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
        }

            .btn-card-action:hover {
                background-color: #7047EB;
                color: #fff;
            }

