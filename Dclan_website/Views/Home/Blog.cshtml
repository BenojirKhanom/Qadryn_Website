            width: 0px;
            background: transparent;
        }

        /* Firefox */
        html, body {
            scrollbar-width: none;
        }

        /* IE & old Edge */
        html, body {
            -ms-overflow-style: none;
        }
        body {
            background-image: linear-gradient(180deg, #CBB6FC 0%, #EBE5FF 30%, #FFF5F5 100%);
            background-repeat: no-repeat;
            background-size: 100% 600px; /* Adjusted background height */
            background-color: #ffffff;
            min-height: 100vh;
            position: relative;
            padding-bottom: 50px;
            font-family: 'Inter', sans-serif;

        }

        /* --- BACKGROUND GRID PATTERN --- */
        .grid-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100vh;
            background-image: linear-gradient(var(--bg-grid-color) 1px, transparent 1px), linear-gradient(90deg, var(--bg-grid-color) 1px, transparent 1px);
            background-size: 60px 60px;
            z-index: -1;
            pointer-events: none;
            mask-image: linear-gradient(to bottom, black 80%, transparent 100%);
            -webkit-mask-image: linear-gradient(to bottom, black 80%, transparent 100%);
        }
        /* --- TOP BAR STYLES --- */
        .top-header-bar {
            background-color: #5D3CF3; /* Brand Purple */
            color: white;
            padding: 5px 0;
            font-size: 14px;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 10000; /* Higher than navbar */
        }

            .top-header-bar a {
                color: white;
                text-decoration: none;
                transition: 0.3s;
                margin-left: 15px;
            }

                .top-header-bar a:hover {
                    opacity: 0.8;
                }

        .top-bar-left i {
