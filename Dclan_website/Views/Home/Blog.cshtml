        .search-icon {
            position: absolute;
            left: 20px;
            top: 50%;
            transform: translateY(-50%);
            color: #999;
            font-size: 1.2rem;
        }

        /* --- BLOG CARDS SECTION --- */
        .blog-grid-section {
            padding-top: 50px;
            padding-bottom: 100px;
            position: relative;
            z-index: 2;
        }

        .qadryn-card {
            background: #FFFFFF;
            border: 1px solid #EAE6FF;
            border-radius: 24px;
            overflow: hidden;
            height: 100%;
            display: flex;
            flex-direction: column;
            min-height: 600px;
            transition: all 0.3s ease-in-out;
        }


        .card-thumb-box {
            height: 280px;
            width: 100%;
            overflow: hidden;
        }

        .card-thumb-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .card-content {
            padding: 24px;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            text-align: left;
        }

        .card-badge {
            background-color: #7047EB;
            color: #fff;
            font-size: 11px;
            font-weight: 700;
            text-transform: uppercase;
            padding: 6px 12px;
            border-radius: 6px;
            margin-bottom: 16px;
            display: inline-block;
            letter-spacing: 0.5px;
        }

        .card-title-text {
            font-size: 1.25rem;
            font-weight: 700;
            color: #100C29;
            margin-bottom: 12px;
            line-height: 1.4;
            font-family: 'Archivo', sans-serif;
        }

        .card-desc-text {
            font-size: 0.95rem;
            color: #52525B;
            line-height: 1.6;
            margin-bottom: 24px;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
