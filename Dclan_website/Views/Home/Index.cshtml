@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Qadryn - HR & Payroll Solution</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <style>
        /* --- 1. COLOR & VARIABLES --- */
        :root {
            --primary-purple: #7047EB;
            --light-purple-bg: #EAE6FF;
            --text-dark: #100C29;
            --text-muted: #52525B;
        }

        body {
            background-image: linear-gradient(180deg, #CBB6FC 0%, #EBE5FF 30%, #FFF5F5 100%);
            background-repeat: no-repeat;
            background-size: 100% 100vh;
            background-color: #ffffff;
            min-height: 100vh;
            position: relative;
            padding-bottom: 50px;
        
            padding-top: 160px;
        }


        /* --- BACKGROUND GRID PATTERN --- */
        .grid-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100vh;
            background-image: linear-gradient(var(--bg-grid-color) 1px, transparent 1px), linear-gradient(90deg, var(--bg-grid-color) 1px, transparent 1px);
            background-size: 60px 60px;
            z-index: -1;
            pointer-events: none;
            mask-image: linear-gradient(to bottom, black 80%, transparent 100%);
            -webkit-mask-image: linear-gradient(to bottom, black 80%, transparent 100%);
        }

        /* --- 2. BACKGROUND --- */
        .hero-wrapper {
            position: relative;
            width: 100%;
            z-index: 1;

        }
        /* --- TOP BAR STYLES --- */
        .top-header-bar {
            background-color: #5D3CF3; /* Brand Purple */
            color: white;
            padding: 5px 0;
            font-size: 14px;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 10000; /* Higher than navbar */
        }

            .top-header-bar a {
                color: white;
                text-decoration: none;
                transition: 0.3s;
                margin-left: 15px;
            }

                .top-header-bar a:hover {
                    opacity: 0.8;
                }


        .top-bar-right {
            display: flex;
            gap: 20px;
            transform: translateX(-25px); 
        }
        .top-header-bar .container {
            max-width: 100% !important;
            margin-left: 0 !important; 
            padding-left: 20px !important; 
            display: flex !important;
        }

        .top-bar-left {
            display: flex;
            align-items: center;
        }

            .top-bar-left i {
                margin-right: 8px; 
                transform: rotate(10deg);
            }
        /* --- 3. NAVBAR (UPDATED FOR STICKY) --- */
        .navbar-container {
            position: fixed;
            top: 20px !important;
            left: 0;
            width: 100%;
            z-index: 2000; 
            padding-top: 20px;
            padding-bottom: 20px;
            max-width: 100% !important;
            padding-left: 0px !important; 
            padding-right: 0px !important;
            background: linear-gradient(to bottom, rgba(203, 182, 252, 0.2) 0%, rgba(255,255,255,0) 100%);
            display: flex;
            justify-content: center;
        }

        .custom-navbar {
            background: rgba(255, 255, 255, 0.65); 
            backdrop-filter: blur(15px);
            -webkit-backdrop-filter: blur(15px);
            border: 1px solid rgba(255, 255, 255, 0.8);
            border-radius: 10px;
            padding: 12px 30px;
            box-shadow: 0 4px 20px rgba(112, 71, 235, 0.08);
            width: 100% !important;
            max-width: 100% !important; 
        }

        .brand-logo {
            font-size: 1.4rem;
            font-weight: 800;
            color: black;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .nav-links {
            margin: 0;
            padding: 0;
            list-style: none;
            display: flex;
            gap: 30px;
        }

            .nav-links a {
                text-decoration: none;
                color: var(--text-dark);
                font-weight: 500;
                font-size: 1rem;
                transition: 0.3s;
            }

                .nav-links a:hover {
                    color: var(--primary-purple);
                }

        .btn-purple {
            background-color: var(--primary-purple);
            color: white;
            padding: 12px 28px;
            border-radius: 12px;
            text-decoration: none;
            font-weight: 600;
            font-size: 0.95rem;
            transition: 0.3s;
            border: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

            .btn-purple:hover {
                background-color: #5b36cb;
                color: white;
                transform: translateY(-2px);
            }
        @@media (max-width: 768px) {
            .top-header-bar .container, .top-header-bar .container-fluid

        {
            padding-left: 10px !important;
            padding-right: 10px !important;
        }

        .top-header-bar {
            font-size: 12px; 
        }

        }
        /* --- MOBILE VIEW FIX (768px-এর নিচে) --- */
        @@media (max-width: 768px) {
            body

        {
            padding-top: 110px !important; 
        }
        .navbar-container {
            top: 32px !important; 
            padding-top: 8px !important;
            padding-bottom: 8px !important;
            background: rgba(255, 255, 255, 0.9); 
            backdrop-filter: blur(10px);
        }
        .custom-navbar {
            padding: 6px 15px !important;
            width: 92% !important;
            border-radius: 8px !important;
        }

        .brand-logo img {
            height: 25px !important;
        }

        #mobile-menu-btn {
            font-size: 1.2rem !important;
        }

        }
        /* --- DESKTOP ONLY FIX (Web View) --- */
        @@media (min-width: 992px) {
            .hero-wrapper > .container {
                padding-top: 0 !important;
            }

            .hero-badge {
                margin-bottom: 25px !important;
            }

            .hero-title {
                margin-top: 0 !important;
            }
        }

        /* --- 4. HERO SECTION --- */
        .hero-badge {
            display: inline-block;
            margin-top: 20px;
            margin-bottom: 15px;
            margin-left: auto;
            margin-right: auto;
            font-size: 0.8rem;
            padding: 6px 15px;
            background-color: #5b36cb;
            color: white;
            border-radius: 40px;
            font-family: Archivo;
            max-width: 2000px;
        }

        .hero-title {
            font-size: 3.5rem;
            font-family: Archivo;
            font-weight: 550;
            line-height: 1.1;
            color: #120A38;
            margin-top: 0;
            letter-spacing: -0.02em;
        }

        .hero-subtitle {
            font-size: 1.1rem;
            color: var(--text-muted);
            line-height: 1.6;
            margin-bottom: 50px;
            max-width: 90%;
        }

        /* --- 5. VISUALS (Cards) --- */
        .visual-container {
            position: relative;
            height: 600px;
            width: 100%;
        }

        .floating-card {
            background: white;
            border-radius: 20px;
            padding: 20px;
            box-shadow: 0 20px 50px rgba(112, 71, 235, 0.08);
            position: absolute;
            border: 1px solid rgba(255,255,255,0.8);
        }

        /* Team Card */
        .card-team {
            width: 280px;
            top: 50px;
            left: 0;
            z-index: 2;
        }

        .user-item {
            display: flex;
            gap: 12px;
            align-items: center;
            background: #F9FAFB;
            padding: 10px;
            border-radius: 12px;
            margin-bottom: 10px;
        }

        .avatar {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            object-fit: cover;
        }

        .u-info h6 {
            margin: 0;
            font-size: 0.9rem;
            font-weight: 700;
        }

        .u-info p {
            margin: 0;
            font-size: 0.75rem;
            color: #888;
        }

        /* Payroll Card */
        .card-payroll {
            width: 310px;
            top: 0;
            right: 20px;
            padding: 30px;
            z-index: 1;
            border-radius: 20px 20px 0 0;
        }

        .chart-bars {
            display: flex;
            align-items: flex-end;
            justify-content: space-between;
            height: 140px;
            margin-top: 25px;
        }

        .bar-group {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 8px;
        }

        .bar {
            width: 20px;
            background: #C4B5FD;
            border-radius: 50px 50px 0 0;
            position: relative;
            transition: height 0.3s ease;
        }

        .month-label {
            font-size: 11px;
            color: #666;
            font-weight: 500;
            text-align: center;
        }

        /* Stats Card */
        .card-stats {
            width: 260px;
            bottom: 80px;
            left: 50px;
            z-index: 3;
        }

        .stat-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 0.85rem;
            color: #555;
            margin-bottom: 12px;
        }

        .dot {
            width: 8px;
            height: 8px;
            background: #22C55E;
            border-radius: 50%;
        }

        .shape-square {
            position: absolute;
            width: 80px;
            height: 80px;
            background: #EBE5FF;
            border-radius: 15px;
            bottom: 120px;
            left: -20px;
            z-index: 0;
            transform: rotate(-10deg);
        }

        .cursor-icon {
            position: absolute;
            bottom: 60px;
            right: 100px;
            font-size: 2rem;
            color: #7047EB;
            z-index: 4;
            transform: rotate(-30deg);
            text-shadow: 0 10px 20px rgba(112, 71, 235, 0.3);
        }

        /* --- STATS BANNER SECTION --- */
        .stats-section-wrapper {
            margin-top: -50px;
            padding-bottom: 80px;
            position: relative;
            z-index: 10;
            margin-top: 50px;
        }

        .stats-banner {
            background-color: #120A38;
            border-radius: 24px;
            position: relative;
            overflow: hidden;
            color: #fff;
            padding: 40px;
        }

        .banner-grid {
            position: absolute;
            inset: 0;
            background-image: linear-gradient(rgba(255, 255, 255, 0.08) 1px, transparent 1px), linear-gradient(90deg, rgba(255, 255, 255, 0.08) 1px, transparent 1px);
            background-size: 50px 50px;
            pointer-events: none;
            z-index: 0;
        }

        .banner-content {
            position: relative;
            z-index: 1;
        }

        .highlight-box {
            background-color: #7047EB;
            border-radius: 16px;
            padding: 30px;
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            color: #fff;
        }

            .highlight-box h4 {
                font-family: Archivo;
                font-size: 1.8rem;
                font-weight: 800;
                margin-bottom: 5px;
            }

            .highlight-box h5 {
                font-family: Archivo;
                font-size: 1.2rem;
                font-weight: 600;
                margin-bottom: 15px;
                opacity: 0.95;
            }

            .highlight-box p {
                font-size: 0.9rem;
                line-height: 1.5;
                margin: 0;
                opacity: 0.9;
            }

        .stat-item {
            margin-top: 15px;
            margin-bottom: 15px;
        }

            .stat-item h2 {
                font-size: 2.8rem;
                font-weight: 700;
                margin-bottom: 10px;
                line-height: 1;
                color: #fff;
            }

            .stat-item p {
                font-size: 0.9rem;
                color: rgba(255, 255, 255, 0.7);
                line-height: 1.5;
                max-width: 200px;
            }

        /* Mobile Menu Fix */
        .nav-links.mobile-menu-active {
            display: flex !important;
            flex-direction: column;
            position: absolute;
            top: 100%; /* Pushes it right below the navbar */
            left: 0;
            width: 100%; /* Full width looks better on mobile */
            background: rgba(255, 255, 255, 0.98);
            backdrop-filter: blur(10px);
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            z-index: 1000;
            text-align: left;
            margin-top: 10px;
        }

        @@media (max-width: 992px) {
            .stats-banner {
                padding: 30px;
            }

            .stat-item {
                margin-bottom: 30px;
            }
            /* Adjust top padding for mobile */
            body {
                padding-top: 100px;
            }
        }

        @@media (max-width: 768px) {
            .highlight-box {
                margin-bottom: 30px;
                text-align: left;
            }

            .stat-item h2 {
                font-size: 2.2rem;
            }
        }

        /* --- RESPONSIVE CSS --- */
        @@media (max-width: 991px) {
            .hero-title {
                font-size: 3rem;
            }

            .visual-container {
                height: 500px;
                margin-top: 50px;
            }

            .nav-links {
                display: none;
            }

            .card-payroll {
                right: 0;
                width: 260px;
            }
        }

        @@media (max-width: 768px) {
            .hero-title {
                font-size: 2.5rem;
            }

            .hero-wrapper {
                text-align: center;
            }

            .hero-badge {
                margin: 0 auto 20px auto;
            }

            .visual-container {
                display: none;
            }
        }

        /* --- TRUSTED PARTNERS TEXT SECTION --- */
        .partners-text-section {
            padding-top: 100px;
            padding-bottom: 60px;
            background-color: transparent;
        }

        .badge-outlined {
            display: inline-block;
            border: 1px solid #C4B5FD;
            background-color: #fff;
            color: #100C29;
            padding: 8px 24px;
            border-radius: 8px;
            font-size: 0.95rem;
            font-weight: 500;
            margin-bottom: 30px;
        }

        .big-heading {
            font-family: Archivo;
            font-size: 3.2rem;
            font-weight: 700;
            color: #433582;
            line-height: 1.25;
            letter-spacing: -0.02em;
        }

        @@media (max-width: 768px) {
            .partners-text-section {
                padding-top: 60px;
            }

            .big-heading {
                font-size: 2rem;
            }
        }

        /* --- LOGO GRID SECTION --- */
        .logo-grid-section {
            padding-bottom: 100px;
        }

        .logo-box {
            background-color: #F6F6F8;
            border-radius: 12px;
            height: 160px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: 0.3s ease;
            cursor: pointer;
        }

            .logo-box:hover {
                background-color: #EAEAF0;
                transform: translateY(-3px);
            }

        .partner-logo {
            font-size: 1.5rem;
            font-weight: 700;
            color: #9090A0;
            font-family: 'Times New Roman', serif;
            opacity: 0.8;
        }

        .font-sans {
            font-family: 'Plus Jakarta Sans', sans-serif;
            font-weight: 800;
            letter-spacing: -0.5px;
        }

        /* --- FEATURES HEADER SECTION --- */
        .features-header-section {
            padding-top: 50px;
            padding-bottom: 50px;
        }

        @@media (max-width: 768px) {
            .features-header-section {
                padding-top: 60px;
            }
        }

        /* --- FEATURES GRID SECTION --- */
        .features-grid-section {
            padding-bottom: 100px;
        }

        .feature-card {
            background: #fff;
            border: 1px solid #EAEAEA;
            border-radius: 24px;
            padding: 30px;
            height: 100%;
            position: relative;
            transition: all 0.3s ease;
            overflow: hidden;
        }

            .feature-card.active-card {
                border: 2px solid #7047EB;
                box-shadow: 0 10px 30px rgba(112, 71, 235, 0.1);
            }

            .feature-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 15px 40px rgba(0, 0, 0, 0.05);
            }

        .f-icon-box {
            width: 50px;
            height: 50px;
            background-color: #F3F0FF;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
            color: #100C29;
            margin-bottom: 20px;
        }

        .f-title {
            font-size: 1.25rem;
            font-weight: 700;
            color: #100C29;
            margin-bottom: 15px;
        }

        .f-desc {
            font-size: 0.95rem;
            color: #666;
            line-height: 1.6;
            margin-bottom: 30px;
        }

        /* --- VISUAL ELEMENTS INSIDE CARDS --- */
        .mini-stat-card {
            background: #fff;
            border: 1px solid #eee;
            border-radius: 16px;
            padding: 15px;
            display: flex;
            gap: 15px;
            margin-bottom: 20px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.03);
        }

        .stat-icon-s {
            width: 40px;
            height: 40px;
            background: #120A38;
            color: #fff;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .employee-list-mock {
            background: #F9FAFB;
            border-radius: 16px;
            padding: 15px;
            border: 1px solid #eee;
        }

        .list-row {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 12px;
            font-size: 0.9rem;
            color: #333;
        }

        .checkbox-mock {
            width: 16px;
            height: 16px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        /* CARD 2: Collaboration Orbit */
        .orbit-visual {
            position: relative;
            height: 220px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .orbit-ring {
            position: absolute;
            border: 1px solid rgba(0,0,0,0.05);
            border-radius: 50%;
        }

        .ring-1 {
            width: 140px;
            height: 140px;
        }

        .ring-2 {
            width: 200px;
            height: 200px;
        }

        .center-circle {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, #E0D9FF, #7047EB);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.2rem;
            z-index: 2;
        }

        .orbit-icon {
            position: absolute;
            width: 36px;
            height: 36px;
            background: #fff;
            box-shadow: 0 4px 10px rgba(0,0,0,0.05);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.9rem;
            color: #333;
        }

        .oi-1 {
            top: 20px;
            left: 50%;
            transform: translateX(-50%);
        }

        .oi-2 {
            bottom: 30px;
            left: 30px;
        }

        .oi-3 {
            bottom: 30px;
            right: 30px;
        }

        .oi-4 {
            top: 60px;
            right: 10px;
        }

        .oi-5 {
            top: 60px;
            left: 10px;
        }

        /* CARD 3: Role & Skills Tree */
        .system-track-box {
            background: #F3F4F6;
            padding: 12px 15px;
            border-radius: 10px;
            font-weight: 600;
            font-size: 0.9rem;
            color: #333;
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .tree-visual {
            background: #FAFAFA;
            border: 1px solid #eee;
            border-radius: 16px;
            padding: 20px;
        }

        .tree-root {
            font-weight: 600;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .tree-branch {
            position: relative;
            padding-left: 20px;
            margin-top: 10px;
        }

        .tree-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 12px;
            position: relative;
            font-size: 0.9rem;
            color: #555;
        }

            .tree-item::before {
                content: '';
                position: absolute;
                left: -15px;
                top: -15px;
                bottom: 50%;
                width: 15px;
                border-left: 1px solid #ccc;
                border-bottom: 1px solid #ccc;
            }

        .status-box {
            width: 24px;
            height: 24px;
            border-radius: 6px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 0.7rem;
        }

        .bg-purple {
            background: #7047EB;
        }

        .bg-dark {
            background: #120A38;
        }

        /* --- BIG FEATURE CARDS SECTION --- */
        .big-features-section {
            padding-bottom: 100px;
        }

        .big-feature-card {
            background: #fff;
            border: 1px solid #EAEAEA;
            border-radius: 24px;
            padding: 40px;
            height: 100%;
            position: relative;
            overflow: hidden;
        }

        .bf-header {
            margin-bottom: 40px;
        }

        .bf-icon-box {
            width: 48px;
            height: 48px;
            background-color: #F3F0FF;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
            color: #100C29;
            margin-bottom: 20px;
        }

        .bf-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: #100C29;
            margin-bottom: 10px;
        }

        .bf-desc {
            color: #666;
            line-height: 1.6;
            font-size: 0.95rem;
        }

        .visual-mockup-box {
            border: 1px solid #eee;
            border-radius: 20px;
            padding: 30px;
            background: #fff;
            box-shadow: 0 5px 20px rgba(0,0,0,0.02);
        }

        /* --- LEFT CARD: BAR CHART STYLES --- */
        .chart-container {
            display: flex;
            align-items: flex-end;
            height: 300px;
            gap: 15px;
            padding-top: 20px;
        }

        .y-axis {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            height: 100%;
            text-align: right;
            padding-right: 10px;
            color: #999;
            font-size: 0.75rem;
            font-weight: 500;
        }

        .bars-wrapper {
            display: flex;
            align-items: flex-end;
            justify-content: space-between;
            flex-grow: 1;
            height: 100%;
            padding-bottom: 5px;
        }

        .chart-bar {
            width: 5%;
            border-radius: 6px 6px 0 0;
            position: relative;
            transition: height 0.5s ease;
        }

        .bar-dark {
            background-color: #6343D8;
        }

        .bar-light {
