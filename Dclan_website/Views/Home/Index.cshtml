@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Qadryn - HR & Payroll Solution</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <style>
        /* --- 1. COLOR & VARIABLES --- */
        :root {
            --primary-purple: #7047EB;
            --light-purple-bg: #EAE6FF;
            --text-dark: #100C29;
            --text-muted: #52525B;
        }

        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            background-color: #F8F5FF;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }

        /* --- 2. BACKGROUND --- */
        .hero-wrapper {
            position: relative;
            width: 100%;
            min-height: 100vh;
            background: radial-gradient(circle at 10% 20%, rgba(139, 92, 246, 0.15) 0%, transparent 40%), radial-gradient(circle at 90% 80%, rgba(192, 132, 252, 0.15) 0%, transparent 40%), linear-gradient(180deg, #E0D9FF 0%, #FFF5F5 100%);
            z-index: 1;
        }

        .grid-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: linear-gradient(rgba(112, 71, 235, 0.05) 1px, transparent 1px), linear-gradient(90deg, rgba(112, 71, 235, 0.05) 1px, transparent 1px);
            background-size: 80px 80px;
            z-index: -1;
            pointer-events: none;
        }

        /* --- 3. NAVBAR --- */
        .navbar-container {
            padding-top: 30px;
            padding-bottom: 30px;
        }

        .custom-navbar {
            background: rgba(255, 255, 255, 0.5);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border: 1px solid rgba(255, 255, 255, 0.8);
            border-radius: 100px;
            padding: 12px 30px;
            box-shadow: 0 4px 20px rgba(112, 71, 235, 0.03);
        }

        .brand-logo {
            font-size: 1.4rem;
            font-weight: 800;
            color: black;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .nav-links {
            margin: 0;
            padding: 0;
            list-style: none;
            display: flex;
            gap: 30px;
        }

            .nav-links a {
                text-decoration: none;
                color: var(--text-dark);
                font-weight: 500;
                font-size: 1rem;
                transition: 0.3s;
            }

                .nav-links a:hover {
                    color: var(--primary-purple);
                }

        .btn-purple {
            background-color: var(--primary-purple);
            color: white;
            padding: 12px 28px;
            border-radius: 12px;
            text-decoration: none;
            font-weight: 600;
            font-size: 0.95rem;
            transition: 0.3s;
            border: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

            .btn-purple:hover {
                background-color: #5b36cb;
                color: white;
                transform: translateY(-2px);
            }

        /* --- 4. HERO SECTION --- */
        .hero-badge {
            background: #7047EB;
            color: white;
            padding: 8px 20px;
            border-radius: 50px;
            font-size: 0.9rem;
            font-weight: 500;
            display: inline-block;
            margin-bottom: 25px;
        }

        .hero-title {
            font-size: 4rem;
            font-weight: 800;
            line-height: 1.1;
            color: #120A38;
            margin-bottom: 25px;
            letter-spacing: -0.02em;
        }

        .hero-subtitle {
            font-size: 1.1rem;
            color: var(--text-muted);
            line-height: 1.6;
            margin-bottom: 40px;
            max-width: 90%;
        }

        /* --- 5. VISUALS (Cards) --- */
        .visual-container {
            position: relative;
            height: 600px;
            width: 100%;
        }

        .floating-card {
            background: white;
            border-radius: 20px;
            padding: 20px;
            box-shadow: 0 20px 50px rgba(112, 71, 235, 0.08);
            position: absolute;
            border: 1px solid rgba(255,255,255,0.8);
        }

        /* Team Card */
        .card-team {
            width: 280px;
            top: 50px;
            left: 0;
            z-index: 2;
        }

        .user-item {
            display: flex;
            gap: 12px;
            align-items: center;
            background: #F9FAFB;
            padding: 10px;
            border-radius: 12px;
            margin-bottom: 10px;
        }

        .avatar {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            object-fit: cover;
        }

        .u-info h6 {
            margin: 0;
            font-size: 0.9rem;
            font-weight: 700;
        }

        .u-info p {
            margin: 0;
            font-size: 0.75rem;
            color: #888;
        }

        /* Payroll Card */
        .card-payroll {
            width: 300px;
            top: 0;
            right: 20px;
            padding: 30px;
            z-index: 1;
        }

        .chart-bars {
            display: flex;
            align-items: flex-end;
            justify-content: space-between;
            height: 150px;
            margin-top: 20px;
        }

        .bar {
            width: 20px;
            background: #D8CEFF;
            border-radius: 50px;
            position: relative;
        }

            .bar.high {
                height: 100%;
                background: #C4B5FD;
            }

            .bar.mid {
                height: 60%;
            }

            .bar.low {
                height: 40%;
            }

        .month-label {
            font-size: 10px;
            color: #999;
            text-align: center;
            margin-top: 8px;
        }

        /* Stats Card */
        .card-stats {
            width: 260px;
            bottom: 80px;
            left: 50px;
            z-index: 3;
        }

        .stat-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 0.85rem;
            color: #555;
            margin-bottom: 12px;
        }

        .dot {
            width: 8px;
            height: 8px;
            background: #22C55E;
            border-radius: 50%;
        }

        .shape-square {
            position: absolute;
            width: 80px;
            height: 80px;
            background: #EBE5FF;
            border-radius: 15px;
            bottom: 120px;
            left: -20px;
            z-index: 0;
            transform: rotate(-10deg);
        }

        .cursor-icon {
            position: absolute;
            bottom: 60px;
            right: 100px;
            font-size: 2rem;
            color: #7047EB;
            z-index: 4;
            transform: rotate(-30deg);
            text-shadow: 0 10px 20px rgba(112, 71, 235, 0.3);
        }

        /* --- RESPONSIVE CSS (Razor Syntax @@media) --- */
        @@media (max-width: 991px) {
            .hero-title {
                font-size: 3rem;
            }

            .visual-container {
                height: 500px;
                margin-top: 50px;
            }

            .nav-links {
                display: none;
            }

            .card-payroll {
                right: 0;
                width: 260px;
            }
        }

        @@media (max-width: 768px) {
            .hero-title {
                font-size: 2.5rem;
            }

            .hero-wrapper {
                text-align: center;
            }

            .hero-badge {
                margin: 0 auto 20px auto;
            }

            .visual-container {
                display: none;
            }
        }
    </style>
</head>
<body>

    <div class="hero-wrapper">
        <div class="grid-overlay"></div>

        <!-- NAVBAR -->
        <div class="container navbar-container">
            <nav class="custom-navbar d-flex justify-content-between align-items-center">

                <!-- Logo -->
                <a href="/Home/Index" class="brand-logo">
                    <i class="fas fa-layer-group" style="color: var(--primary-purple);"></i>
                    Qadryn
                </a>

                <!-- Links -->
                <ul class="nav-links d-none d-lg-flex">
                    <li><a href="#home">Home</a></li>
                    <li><a href="#features">Features</a></li>
                    <li><a href="#pricing">Pricing</a></li>
                    <li><a href="#devices">Devices</a></li>

                    <!-- ✅ BLOG LINK FIXED: Directly points to /Home/Blog -->
                    <li>
                        <a href="/Home/Blog" style="color: var(--primary-purple); font-weight: 700;">Blog</a>
                    </li>

                    <li><a href="#contact">Contact</a></li>
                </ul>

                <!-- Button -->
                <a href="#" class="btn-purple d-none d-sm-inline-flex">Get Started For Free</a>
                <i class="fas fa-bars d-lg-none" style="font-size: 1.5rem; cursor: pointer;"></i>
            </nav>
        </div>

        <!-- HERO CONTENT -->
        <div class="container" style="padding-top: 60px;">
            <div class="row align-items-center">

                <!-- Left Text -->
                <div class="col-12 col-lg-6 mb-5 mb-lg-0">
                    <div class="hero-badge">Solution for seamless HR management.</div>
                    <h1 class="hero-title">Simplify HR & <br> Payroll for a Smarter <br> Workplace</h1>
                    <p class="hero-subtitle">Handle employee management, attendance tracking, payroll and compliance-all in one easy-to-use platform built for modern teams.</p>
                    <a href="#" class="btn-purple" style="padding: 15px 35px; font-size: 1.1rem;">
                        Get Started <i class="fas fa-arrow-up-right-from-square ms-2"></i>
                    </a>
                </div>

                <!-- Right Visuals -->
                <div class="col-12 col-lg-6">
                    <div class="visual-container">
                        <div class="shape-square"></div>

                        <!-- Cards -->
                        <div class="floating-card card-team">
                            <h6 class="mb-3">Team Activity</h6>
                            <div class="user-item">
                                <img src="https://i.pravatar.cc/150?img=1" class="avatar" alt="User">
                                <div class="u-info"><h6>Brooklyn Simmons</h6><p>On leave today</p></div>
                            </div>
                            <div class="user-item">
                                <img src="https://i.pravatar.cc/150?img=5" class="avatar" alt="User">
                                <div class="u-info"><h6>Jenny Wilson</h6><p>Checked in at 9:02 AM</p></div>
                            </div>
                            <div class="user-item">
                                <img src="https://i.pravatar.cc/150?img=3" class="avatar" alt="User">
                                <div class="u-info"><h6>Robert Fox</h6><p>Completed onboarding</p></div>
                            </div>
                        </div>

                        <div class="floating-card card-payroll">
                            <p class="text-muted mb-1" style="font-size: 0.8rem;">Payroll Summary</p>
                            <h3>$36,000</h3>
                            <div class="chart-bars">
                                <div><div class="bar mid"></div><div class="month-label">Jan</div></div>
                                <div><div class="bar low"></div><div class="month-label">Feb</div></div>
                                <div><div class="bar high"></div><div class="month-label">Mar</div></div>
                                <div><div class="bar low"></div><div class="month-label">Apr</div></div>
                                <div><div class="bar mid"></div><div class="month-label">May</div></div>
                                <div><div class="bar mid"></div><div class="month-label">Jun</div></div>
                            </div>
                        </div>

                        <div class="floating-card card-stats">
                            <div class="d-flex justify-content-between mb-3">
                                <h6 class="m-0">Today's Stats</h6><i class="fas fa-ellipsis-h text-muted"></i>
                            </div>
                            <div class="stat-row"><span>42 employees checked in</span><div class="dot"></div></div>
                            <div class="stat-row"><span>5 pending approvals</span><div class="dot"></div></div>
                            <div class="stat-row"><span>3 new hires this month</span><div class="dot"></div></div>
                        </div>

                        <i class="fas fa-mouse-pointer cursor-icon"></i>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>