        /* === Animated Grid Background === */
        .grid-bg {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: linear-gradient(rgba(150, 255, 150, 0.08) 1px, transparent 1px), linear-gradient(90deg, rgba(150, 255, 150, 0.08) 1px, transparent 1px);
            background-size: 60px 60px;
            animation: gridMove 20s linear infinite;
            z-index: 0;
            box-shadow: inset 0 0 180px rgba(168, 255, 100, 0.1);
            filter: brightness(1.1);
        }

        @@keyframes gridMove {
            0% {
                background-position: 0 0;
            }

            100% {
                background-position: 60px 60px;
            }
        }

        /* === Center Glow === */
        .hero-section::before {
            content: "";
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 900px;
            height: 900px;
            background: radial-gradient( circle, rgba(168, 255, 100, 0.2) 0%, rgba(0, 0, 0, 0) 70% );
            border-radius: 50%;
            filter: blur(120px);
            z-index: 0;
            opacity: 0.9;
            animation: glowPulse 5s ease-in-out infinite alternate;
