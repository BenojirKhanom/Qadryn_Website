}


 @section Styles {
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Inter', sans-serif;
        }

        :root {
            --brand-purple: #7047EB;
            --top-bar-bg: #5D3CF3;
             /* Darker purple for top bar */
            --nav-bg: rgba(235, 229, 255, 0.85); /* Light purple glass effect */
        }

        html::-webkit-scrollbar,
        body::-webkit-scrollbar {
            width: 0px;
            background: transparent;
        }

        /* Firefox */
        html, body {
            scrollbar-width: none;
        }

        /* IE & old Edge */
        html, body {
            -ms-overflow-style: none;
        }
        body {
            background-image: linear-gradient(180deg, #CBB6FC 0%, #EBE5FF 30%, #FFF5F5 100%);
            background-repeat: no-repeat;
            background-size: 100% 100vh;
            background-color: #ffffff;
            min-height: 100vh;
            padding-top: 160px; /* Space for the double header */
        }

        .grid-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100vh;
            background-image: linear-gradient(#E5E7EB 1px, transparent 1px), linear-gradient(90deg, #E5E7EB 1px, transparent 1px);
            background-size: 60px 60px;
            z-index: -1;
            pointer-events: none;
            mask-image: linear-gradient(to bottom, black 80%, transparent 100%);
            -webkit-mask-image: linear-gradient(to bottom, black 80%, transparent 100%);
        }

        .container {
            max-width: 1300px;
            margin: 0 auto;
            padding: 0 20px;
        }

        #mobile-menu-btn {
            display: none;
            font-size: 24px;
            cursor: pointer;
        }

        /* --- MOBILE RESPONSIVE --- */
        @@media (max-width: 1100px) {
            .navbar-inner

        {
            grid-template-columns: 1fr 1fr; /* Logo | Button + Burger */
        }

        .nav-links {
            display: none; /* Hide standard links */
            position: absolute;
            top: 100%;
            left: 0;
            width: 100%;
            background: white;
            flex-direction: column;
            padding: 20px;
            gap: 15px;
            text-align: center;
            box-shadow: 0 10px 15px rgba(0,0,0,0.05);
        }

            .nav-links.active {
                display: flex;
            }

        #mobile-menu-btn {
            display: block;
        }

        }

        @@media (max-width: 600px) {
            .top-bar-right

        {
            display: none;
        }
        /* Hide social on small mobile */
        .btn-purple {
            display: none;
        }
        /* Hide button on small mobile or move to burger */
        }

        /* --- MOBILE MENU STYLES (Fixed) --- */
        @@media (max-width: 991px) {
            /* 1. Hide links by default on mobile */
            .nav-links

        {
            display: none;
            gap: 10px;
        }
        /* 2. Show links when active class is added via JS */
        .nav-links.mobile-menu-active {
            display: flex !important;
            flex-direction: column;
            position: absolute;
            top: 100%; /* Position right below navbar */
            left: 0;
            margin-top: 15px; /* Gap between navbar and menu */
            width: 200px; /* Fixed width for the box */
            background: #ffffff;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.15); /* Strong shadow */
            border: 1px solid #f0f0f0;
            z-index: 9999; /* Ensure it's on top of everything */
        }

            .nav-links.mobile-menu-active li {
                width: 100%;
                margin-bottom: 15px;
            }

                .nav-links.mobile-menu-active li a {
                    font-size: 1.1rem;
                    font-weight: 600;
                    color: #100C29;
                    display: block;
                }

                    .nav-links.mobile-menu-active li a:hover {
                        color: #7047EB;
                        transform: translateX(5px); /* Slide effect on hover */
                    }

        } /* <--- THIS CLOSING BRACE WAS MISSING */

