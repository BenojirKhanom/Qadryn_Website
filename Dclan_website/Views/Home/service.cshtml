 @section Styles {
    <style>

        /* --- RESET & VARIABLES --- */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Inter', sans-serif;
        }

        :root {
            --brand-purple: #7047EB; /* Button and Brand color */
            --top-bar-bg: #5D3CF3; /* Vibrant Purple from top of image */
            --nav-bg: rgba(235, 229, 255, 0.7); /* Lavender tint with transparency */
            --text-dark: #100C29;
        }

        html::-webkit-scrollbar,
        body::-webkit-scrollbar {
            width: 0px;
            background: transparent;
        }
        /* Firefox */
        html, body {
            scrollbar-width: none;
        }

        /* IE & old Edge */
        html, body {
            -ms-overflow-style: none;
        }
        body {
            background-image: linear-gradient(180deg, #CBB6FC 0%, #EBE5FF 30%, #FFF5F5 100%);
            background-repeat: no-repeat;
            background-size: 100% 100vh;
            background-color: #ffffff;
            min-height: 100vh;
            position: relative;
            padding-bottom: 50px;
            padding-top: 160px;
        }
        /* --- BACKGROUND GRID PATTERN --- */
        .grid-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%; /* Fixed height issue */
            background-image: linear-gradient(var(--bg-grid-color) 1px, transparent 1px), linear-gradient(90deg, var(--bg-grid-color) 1px, transparent 1px);
            background-size: 60px 60px;
            z-index: -1;
            pointer-events: none;
            mask-image: linear-gradient(to bottom, black 80%, transparent 100%);
            -webkit-mask-image: linear-gradient(to bottom, black 80%, transparent 100%);
        }

        .hero-section {
            width: 100%;
            min-height: 100vh;
            padding: 80px 20px;
            position: relative;
            display: flex;
            justify-content: center;
            /* RECREATING THE GRID BACKGROUND */
            background-image: linear-gradient(to right, rgba(230, 220, 255, 0.4) 1px, transparent 1px), linear-gradient(to bottom, rgba(230, 220, 255, 0.4) 1px, transparent 1px);
            background-size: 50px 50px; /* Adjust grid size here */
        }

        .content-wrapper {
            max-width: 1200px; /* Aligns text and image width */
            width: 100%;
        }

        /* TEXT POSITIONING */
        .text-block {
            text-align: left;
            margin-bottom: 60px; /* Space between text and image */
            padding-left: 10px;
        }

        .headline {
            font-size: clamp(2.5rem, 5vw, 4.2rem);
            color: #4b397f; /* Deep purple from image */
            font-weight: 600;
            line-height: 1.1;
            letter-spacing: -0.02em;
            margin-bottom: 25px;
        }
        .subtext {
            font-size: 1.15rem;
            line-height: 1.6;
            color: #71717a; /* Muted gray text */
            max-width: 700px; /* Prevents text from stretching too far */
        }
        /* IMAGE POSITIONING & STYLING */
        .image-block {
            width: 100%;
            display: flex;
            justify-content: center;
            overflow: hidden;
        }
        .main-image {
            width: 100%;
            height: 500px;
            border-radius: 24px;
            border: 1px solid rgba(124, 58, 237, 0.2);
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.05);
            object-fit: cover;
        }
        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .hero-section

        {
            padding: 40px 15px;
            background-size: 30px 30px; /* Smaller grid on mobile */
        }

        .headline {
            font-size: 2.2rem;
        }

        .text-block {
            margin-bottom: 40px;
        }

        }
        .erp-features {
            padding-top: 0px; 
            padding-bottom: 50px;
            margin-top: 0; 
            margin-left: 70px;
            font-family: 'Inter', sans-serif;
        }

        .erp-header {
           
            margin-bottom: 0px;
        }

        .erp-title {
            font-size: 3rem;
            color: #4b397f; /* Matching the purple in your image */
            font-weight: 600;
            margin-bottom: 15px;
            white-space: nowrap;
        }

        .erp-subtitle {
            font-size: 1.1rem;
            line-height: 1.6;
            color: #666;
        }

        /* 2 Column Grid for Desktop */
        .erp-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            column-gap: 70px;
        }

        .erp-item {
            display: flex;
            align-items: center;
            padding: 35px 0;
        }

            /* The thin divider line */
            .erp-item.border-bottom {
                border-bottom: 1px solid #e0e0e0;
            }

        .erp-num {
            font-size: 1rem;
            color: #999;
            margin-right: 25px;
            min-width: 25px;
        }

        .erp-text {
            font-size: 1.3rem;
            color: #444;
            font-weight: 500;
            flex-grow: 1;
            margin: 0;
        }

        .erp-arrow {
            color: #4b397f;
            margin-left: 10px;
        }

        /* Responsive adjustment */
        @@media (max-width: 768px) {
            .erp-grid

        {
            grid-template-columns: 1fr;
        }

        .erp-item {
            border-bottom: 1px solid #e0e0e0;
        }

            .erp-item:last-child {
                border-bottom: none;
            }

        .erp-title {
            font-size: 2.2rem;
                white-space: normal;
        }

        }
        .erp-image-section {
            width: 100%;
            padding: 20px 0 80px 0; 
            display: flex;
            justify-content: center;
        }


        .image-block {
            width: 100%;
            display: flex;
            justify-content: center;
            overflow: hidden;
        }

        .main-image {
            width: 100%;
            height: 500px; 
            border-radius: 24px;
            border: 1px solid rgba(124, 58, 237, 0.2);
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.05);
            object-fit: cover; 
            object-position: center;
        }
        @@media (max-width: 768px) {
            .main-image

        {
            height: 300px; 
        }

        }

        .erp-image-section .image-block {
            max-width: 1200px;
            width: 100%;
            margin: 0 auto; 
            display: flex;
            justify-content: center;
            overflow: hidden;
        }

        .section-container {
            text-align: center;
            padding: 100px 20px;
            max-width: 1000px;
            margin: 0 auto;
        }

        /* The small "Why Choose Us" tag */
        .badge {
            display: inline-block;
            padding: 8px 20px;
            border: 1px solid #d1d5db; /* Light gray border */
            border-radius: 8px;
            font-size: 14px;
            font-weight: 500;
            color: #1f2937; /* Darker gray text */
            margin-bottom: 32px;
        }

        /* Large purple heading */
        .heading {
            font-size: 42px;
            font-weight: 700;
            color: #513a8a; /* Deep purple color */
            margin: 0 0 24px 0;
            line-height: 1.2;
            letter-spacing: -0.02em;
        }

        /* Descriptive paragraph */
        .description {
            font-size: 19px;
            line-height: 1.6;
            color: #6b7280; /* Medium gray */
            max-width: 800px;
            margin: 0 auto;
        }

        /* Responsive adjustment for mobile */
        @@media (max-width: 768px) {
            .heading

        {
            font-size: 32px;
        }

        .description {
            font-size: 17px;
        }

        }

        .hr-features-section {
            --primary-purple: #6366f1;
            --text-dark: #1f2937;
            --text-gray: #4b5563;
            --border-color: #f3f4f6;
            --icon-bg: #a5b4fc;
            font-family: 'Inter', -apple-system, sans-serif;
            padding: 60px 20px;
            max-width: 1400px;
            margin: 0 auto;
        }

        .features-grid {
            display: grid;
            grid-template-columns: repeat(6, 1fr);
            gap: 24px;
        }

        /* Card Base Styling */
        .feature-card {
            background: #ffffff;
            border-radius: 20px;
            padding: 32px;
            border: 2px solid var(--border-color);
            display: flex;
            flex-direction: column;
        }

        /* Grid Spans */
        .card-small {
            grid-column: span 2;
        }

        .card-medium {
            grid-column: span 3;
        }

        .card-full {
            grid-column: span 6;
            flex-direction: row;
            align-items: center;
            justify-content: space-between;
            padding: 24px 40px;
        }

        /* Highlighted border for the first card */
        .card-accent {
            border-color: #c7d2fe;
        }

        /* Icon Box */
        .icon-box {
            width: 44px;
            height: 44px;
            background-color: var(--icon-bg);
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 24px;
            color: white;
        }

            .icon-box svg {
                width: 22px;
                height: 22px;
                fill: none;
                stroke: currentColor;
                stroke-width: 2;
            }

        /* Typography */
        .hr-features-section h3 {
            font-size: 20px;
            font-weight: 700;
            margin: 0 0 12px 0;
            color: var(--text-dark);
        }

        .hr-features-section p {
            font-size: 15px;
            line-height: 1.6;
            color: var(--text-gray);
            margin: 0;
        }

        /* Call to Action Button */
        .btn-cta {
            background-color: var(--primary-purple);
            color: white;
            padding: 12px 24px;
            border-radius: 10px;
            text-decoration: none;
            font-weight: 600;
            font-size: 15px;
            white-space: nowrap;
            transition: opacity 0.2s ease;
        }

            .btn-cta:hover {
                opacity: 0.9;
            }

        /* Responsiveness */
        @@media (max-width: 1024px) {
            .card-small

        {
            grid-column: span 3;
        }

        }

        @@media (max-width: 768px) {
            .features-grid

        {
            grid-template-columns: 1fr;
        }

        .card-small, .card-medium, .card-full {
            grid-column: span 1;
        }

        .card-full {
            flex-direction: column;
            text-align: center;
            gap: 24px;
        }

        }

        .faq-container {
            --primary-purple: #513a8a;
            --border-color: #c7d2fe;
            --text-gray: #6b7280;
            font-family: 'Inter', -apple-system, sans-serif;
            max-width: 1400px;
            margin: 60px auto;
            padding: 0 20px;
        }

        .faq-title {
            color: var(--primary-purple);
            font-size: 32px;
            font-weight: 700;
            margin-bottom: 40px;
        }

        /* Accordion Box Styling */
        details {
            border: 1px solid var(--border-color);
            border-radius: 12px;
            margin-bottom: 16px;
            padding: 24px;
            transition: all 0.3s ease;
        }

        /* Remove default summary arrow */
        summary {
            list-style: none;
            display: flex;
            justify-content: space-between;
            align-items: center;
            cursor: pointer;
            font-size: 18px;
            font-weight: 600;
            color: var(--primary-purple);
        }

            summary::-webkit-details-marker {
                display: none;
            }

            /* Custom Icons (+ and -) */
            summary::after {
                content: '+';
                font-size: 24px;
                font-weight: 300;
                color: var(--primary-purple);
            }

        details[open] summary::after {
            content: '—'; /* Using an em-dash for the minus look */
            font-size: 18px;
        }

        /* Answer Text Styling */
        .faq-answer {
            margin-top: 16px;
            color: var(--text-gray);
            line-height: 1.6;
            font-size: 15px;
            max-width: 90%;
        }

        /* Animation */
        details[open] {
            background-color: transparent;
        }

        /* --- FIX FOR THE 490px GAP & OVERFLOW --- */
        @@media (max-width: 1024px) {
            /* 1. Remove the 70px offset that pushes the site to the right */
            .erp-features

        {
            margin-left: 0 !important;
            padding-left: 20px !important;
            padding-right: 20px !important;
        }

        /* 2. Allow text to wrap so it doesn't force a wide width */
        .erp-title, .headline, .heading {
            white-space: normal !important;
            overflow-wrap: break-word;
            font-size: clamp(1.8rem, 8vw, 2.5rem) !important;
        }

        /* 3. Ensure no inner container exceeds the viewport width */
        .container, .content-wrapper, .erp-grid {
            width: 100% !important;
            max-width: 100vw !important;
            margin-left: 0 !important;
            margin-right: 0 !important;
        }

        /* 4. Global fix to stop any element from creating a right-side gap */
        html, body {
            overflow-x: hidden !important;
            width: 100%;
            position: relative;
        }

        /* 5. Ignore manual line breaks that break small screen layouts */
        br {
            display: none;
        }

        }
        </style>
 }
